<h1>@Title</h1>
<div class="poster" id="poster" style="width: 180px; height: 350px; background-color: red; border-radius: 10px;">
    <div class="headimage" style="width: 180px; height: 150px; background-color: blue; border-radius: 10px;">
        <img style="width: 180px; height: 150px; background-color: blue; border-radius: 10px;" src="@headimageurl" />
    </div>
    <div class="Info" style="width: 180px; height: 200px; background-color: blue; border-radius: 10px;"></div>
</div>
@code {
    [Parameter]
    public string Title { get; set; } = "";
    [Parameter]
    public string headimageurl { get; set; } = "";
}
